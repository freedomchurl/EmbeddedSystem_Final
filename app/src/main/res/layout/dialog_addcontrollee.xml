<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="400dp"
    android:orientation="vertical"
    android:background="@color/normalMainColor"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="12dp"
        android:text="Add Controllee"
        android:gravity="center_vertical"
        android:background="@color/darkMainColor"
        android:textColor="#ffffff"
        android:paddingLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:text="연결할 디바이스 IP"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:background="#585858"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:hint="상대방의 IP를 입력하세요"
                    android:textSize="11dp"
                    android:paddingLeft="10dp"
                    android:inputType="text"
                    android:id="@+id/add_controllee_ip"
                    android:background="#ffffff"/>

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:text="연결할 디바이스 Port"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:background="#585858"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:hint="상대방의 Port를 입력하세요"
                    android:textSize="11dp"
                    android:paddingLeft="10dp"
                    android:inputType="numberDecimal"
                    android:id="@+id/add_controllee_port"
                    android:background="#ffffff"/>

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:text="접속 비밀번호"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:background="#585858"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:hint="접속 비밀번호를 입력하세요"
                    android:textSize="11dp"
                    android:paddingLeft="10dp"
                    android:inputType="textPassword"
                    android:id="@+id/add_controllee_pwd"
                    android:background="#ffffff"/>


            </LinearLayout>


        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_round_intro"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:id="@+id/add_ok_Button"
                android:textColor="@color/darkMainColor"
                android:textSize="11dp"
                android:text="접속"/>


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_round_intro"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:id="@+id/add_cancel_Button"
                android:textColor="@color/darkMainColor"
                android:textSize="11dp"
                android:text="취소"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>